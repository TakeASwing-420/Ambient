modules = ["nodejs-20", "web", "postgresql-16", "python-3.11"]
run = "npm run dev"
hidden = [".config", ".git", "generated-icon.png", "node_modules", "dist"]

[nix]
channel = "stable-24_05"
packages = ["cairo", "ffmpeg", "ffmpeg-full", "freetype", "ghostscript", "glibcLocales", "gobject-introspection", "gtk3", "libsndfile", "pkg-config", "qhull", "sox", "tcl", "tk"]

[deployment]
deploymentTarget = "autoscale"
build = ["npm", "run", "build"]
run = ["npm", "run", "start"]

[workflows]
runButton = "Full Stack Dev"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 5000

[[workflows.workflow]]
name = "Full Stack Dev"
author = 34225913
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python ai_model/main.py"

[[workflows.workflow]]
name = "AI Model Training"
author = 34225913
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python ai_model/train.py --data_dir ai_model/data --output_dir ai_model/output --checkpoint_dir ai_model/models"

[[workflows.workflow]]
name = "Run Tests"
author = 34225913
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run check"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m pytest ai_model/tests/"

[[ports]]
localPort = 5000
externalPort = 80
